        | !

    div.isotope-container
        each item in discussions
            a(href='#{item.url}')
                div.isotope-item.content-block
                    table
                        tbody
                            tr
                                td(rowspan=3)
                                    img(src='/images/#{item.imageURL}')
                            tr
                                td
                                    div.discussion-title #{item.title}
                            tr
                                td
                                    div.discussion-description #{item.description}